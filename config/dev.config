%% Development configuration with alternative ports
[
    {erlvectordb, [
        % Network configuration - using alternative ports
        {mcp_port, 8090},
        {oauth_port, 8091}, 
        {rest_api_port, 8092},
        {rest_api_enabled, true},
        
        % Development Mode Configuration
        {development_mode, true},
        {port_config, #{
            mcp_server => #{
                preferred_port => 9080,
                port_range => {9080, 9100},
                bind_interface => "127.0.0.1",
                required => true,
                startup_order => 1,
                health_check_path => "/health"
            },
            oauth_server => #{
                preferred_port => 9081,
                port_range => {9081, 9101},
                bind_interface => "127.0.0.1",
                required => true,
                startup_order => 2,
                health_check_path => "/oauth/health"
            },
            rest_api_server => #{
                preferred_port => 9082,
                port_range => {9082, 9102},
                bind_interface => "127.0.0.1",
                required => true,
                startup_order => 3,
                health_check_path => "/api/health"
            }
        }},
        {development_config, #{
            base_ports => #{
                mcp_server => 9080,
                oauth_server => 9081,
                rest_api_server => 9082
            },
            timeout_ms => 2000,
            port_range_size => 20
        }},
        
        % Authentication
        {oauth_enabled, true},
        {oauth_token_endpoint, "http://localhost:8091/oauth/token"},
        {create_default_client, true},
        {default_client_id, <<"admin">>},
        {default_client_secret, <<"admin_secret_2024">>},
        {token_lifetime, 3600000},
        {refresh_token_lifetime, 86400000},
        
        % Clustering configuration
        {cluster_enabled, false},
        {node_name, 'erlvectordb@localhost'},
        {cluster_cookie, erlvectordb_cluster},
        {replication_factor, 2},
        {heartbeat_interval, 5000},
        
        % Compression configuration
        {compression_enabled, true},
        {compression_algorithm, quantization_8bit},
        
        % Storage configuration
        {max_vector_stores, 100},
        {default_index_type, flat},
        {persistence_enabled, true},
        {persistence_dir, "data"},
        {backup_dir, "backups"},
        {sync_interval, 30000},
        {auto_backup_enabled, false},
        {auto_backup_interval, 3600000}
    ]},
    {kernel, [
        {logger_level, info},
        {logger, [
            {handler, default, logger_std_h,
                #{config => #{type => standard_io},
                  formatter => {logger_formatter, #{}}}}
        ]}
    ]}
].